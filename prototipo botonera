<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd"> 
<html> 
<head> 
<title>Contador</title> 
</head> 
<body> 
<script language="JavaScript"> 
var contador=0; 
function incrementar() { 

/*document.ejemplo.btnincrementar.value= contador++; */
document.getElementById('lblprueba').innerHTML = contador++;
} 

function decrementar() { 
/*document.ejemplo.btnincrementar.value= contador--;*/
document.getElementById('lblprueba').innerHTML = contador--;
} 

</script> 
<form name="ejemplo"> 
<input type="button" onClick="incrementar()" value="aumentar"> 
<input type="button" onClick="decrementar()" value="disminuir"> 
<label> 
<label id="lblprueba"></label>
</label> 
</form> 
</html>